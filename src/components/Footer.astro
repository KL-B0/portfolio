---
import { SITE, SOCIALS } from "@config";
import LinkButton from "./LinkButton.astro";

const currentYear = new Date().getFullYear();
---

<footer
  class="mb-12 flex h-24 w-full flex-col justify-center bg-skin-fill p-2 sm:mb-0 sm:h-16"
>
  <div class="mx-auto mb-3 flex flex-row justify-center gap-4 sm:hidden">
    {
      SOCIALS.map(social => (
        <LinkButton
          href={social.href}
          aria-label={social.linkTitle}
          icon={social.icon}
        />
      ))
    }
  </div>
  <p class="mx-auto text-skin-base">&copy; {currentYear} {SITE.author}</p>
</footer>
