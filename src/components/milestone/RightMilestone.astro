---
import Milestone from "./Milestone.astro";

export interface Props {
  title: string;
  location: string;
  date: string;
  last?: boolean;
}

const { title, location, date, last } = Astro.props;
---

{
  !last ? (
    <>
      <div class="xl:hidden">
        <span class="milestone-dot" />
        <span class="milestone-bar" />
      </div>
      <span class="hidden xl:block" />
      <span class="hidden xl:block" />
      <div class="hidden xl:block">
        <span class="milestone-dot" />
        <span class="milestone-bar" />
      </div>
      <Milestone title={title} location={location} date={date} />
    </>
  ) : (
    <>
      <div class="xl:hidden">
        <span class="milestone-dot" />
      </div>
      <span class="hidden xl:block" />
      <span class="hidden xl:block" />
      <div class="hidden xl:block">
        <span class="milestone-dot" />
      </div>
      <Milestone title={title} location={location} date={date} />
    </>
  )
}
