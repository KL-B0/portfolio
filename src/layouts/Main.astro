---
interface StringTitleProp {
  pageTitle: string;
  pageDescription?: string;
}

interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDescription?: string;
}

export type Props = StringTitleProp | ArrayTitleProp;

const { props } = Astro;
---

<main id="main-content">
  {
    "titleTransition" in props ? (
      <h1>
        {props.pageTitle[0]}
        <span transition:name={props.titleTransition}>
          {props.pageTitle[1]}
        </span>
      </h1>
    ) : (
      <h1>{props.pageTitle}</h1>
    )
  }
  <p>{props.pageDescription}</p>
  <slot />
</main>

<style>
  #main-content {
    @apply mx-auto flex w-full max-w-6xl flex-1 flex-col items-center px-4 pb-4;
  }
  #main-content h1 {
    @apply text-center text-2xl font-semibold sm:text-3xl;
  }
  #main-content p {
    @apply mb-6 mt-2 text-center text-lg sm:text-xl;
  }
</style>
